---
layout: default
---

<h1>Works</h1>

{% if site.works.size > 0 %}
  <ul>
    {% for work in site.works %}
    <li>
      <a href="{{ work.url }}">{{ work.title }}</a>
      {% if work.description != blank %}
        <p>{{ work.description }}</p>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
{% else %}
  <p>No works yet.</p>
{% endif %}
